---
import { Progress } from 'studiocms:ui/components/progress';
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <br />
    <br />

    <div id="basic-test">
        <Progress id="progress" max={100} value={50} label="Example Progress Bar" />
    </div>

    <br />
    <br />

    <div id="color-test">
        <Progress id="progress-1" max={100} value={50} color="primary" label="Example Progress Bar - Primary" />
        <br />
        <Progress id="progress-2" max={100} value={50} color="success" label="Example Progress Bar - Success" />
        <br />
        <Progress id="progress-3" max={100} value={50} color="warning" label="Example Progress Bar - Warning" />
        <br />
        <Progress id="progress-4" max={100} value={50} color="danger" label="Example Progress Bar - Danger" />
        <br />
        <Progress id="progress-5" max={100} value={50} color="info" label="Example Progress Bar - Info" />
        <br />
        <Progress id="progress-6" max={100} value={50} color="monochrome" label="Example Progress Bar - Monochrome" />
    </div>
</Layout>
