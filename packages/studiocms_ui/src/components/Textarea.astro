---
import type { HTMLAttributes } from 'astro/types';
import { generateID } from '../utils/generateID';

/**
 * Props for the textarea component
 */
interface Props extends HTMLAttributes<'textarea'> {
  /**
   * The label of the textarea.
   */
	label?: string;
  /**
   * The placeholder of the textarea.
   */
	placeholder?: string;
  /**
   * Whether the textarea is required. Defaults to `false`.
   */
	isRequired?: boolean;
  /**
   * Whether the textarea should take up the full width of its container. Defaults to `false`.
   */
	fullWidth?: boolean;
  /**
   * Whether the textarea should take up the full height of its container. Defaults to `false`.
   */
	fullHeight?: boolean;
  /**
   * Whether the textarea should be resizable. Defaults to `false`.
   */
	resize?: boolean;
  /**
   * The name attribute for the textarea. Useful for form submission.
   */
	name?: string;
  /**
   * Whether the textarea is disabled. Defaults to `false`.
   */
	disabled?: boolean;
  /**
   * The default value of the textarea.
   */
	defaultValue?: string;
}

const {
	label,
	placeholder,
	isRequired,
	fullWidth,
	fullHeight,
	resize,
	name = generateID('textarea'),
	disabled,
	defaultValue,
	...props
} = Astro.props;
---
<label 
  for={name} 
  class="sui-textarea-label"
  class:list={[
    fullWidth && "full-width",
    fullHeight && "full-height",
    resize && "resize",
    disabled && "disabled",
  ]}
>
  <span class="label">
    {label} <span class="req-star">{isRequired && "*"}</span>
  </span>
  <textarea
    placeholder={placeholder}
    name={name}
    id={name}
    class="sui-textarea"
    required={isRequired}
    disabled={disabled}
    {...props}
    
  >{defaultValue}</textarea>
</label>
<style>
  .sui-textarea-label {
    display: flex;
    flex-direction: column;
    gap: .25rem;
    max-width: 80ch;
  }

  .sui-textarea-label.disabled {
    opacity: 0.5;
    pointer-events: none;
    color: hsl(var(--text-muted));
  }

  .sui-textarea-label.full-width {
    width: 100%;
    max-width: none;
  }

  .sui-textarea-label.full-height {
    height: 100%;
  }

  .label {
    font-size: 14px;
  }

  .sui-textarea {
    padding: .65rem;
    border-radius: 8px;
    border: 1px solid hsl(var(--border));
    background: hsl(var(--background-step-2));
    color: hsl(var(--text-normal));
    transition: all .15s ease;
    resize: none;
    min-height: 12ch;
    width: 100%;
    height: 100%;
  }

  .sui-textarea:hover {
    background: hsl(var(--background-step-3));
  }

  .resize .sui-textarea {
    resize: both;
  }

  .sui-textarea:active,
  .sui-textarea:focus {
    border: 1px solid hsl(var(--primary-base));
    outline: none;
    background: hsl(var(--background-step-2));
  }

  .req-star {
    color: hsl(var(--danger-base));
    font-weight: 700;
  }
</style>
