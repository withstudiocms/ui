---
import config from 'virtual:starlight/user-config';
import { logos } from 'virtual:starlight/user-images';
import type { Props } from '@astrojs/starlight/props';
import { Toaster } from '@studiocms/ui/components';

const { siteTitle, siteTitleHref } = Astro.props;
---

<Toaster />

<div class="site-title sl-flex">
  <div class="site-title-quicklinks">
    {
      config.logo && logos.dark && (
        <>
          <img
            class:list={{ 'light:sl-hidden': !('src' in config.logo) }}
            alt={config.logo.alt}
            src={logos.dark.src}
            width={logos.dark.width}
            height={logos.dark.height}
          />
          {/* Show light alternate if a user configure both light and dark logos. */}
          {!('src' in config.logo) && (
            <img
              class="dark:sl-hidden"
              alt={config.logo.alt}
              src={logos.light?.src}
              width={logos.light?.width}
              height={logos.light?.height}
            />
          )}
        </>
      )
    }
    <div class="main-links">
      <div class="studiocms-link">
        <a href="https://studiocms.dev" class:list={[ config.logo?.replacesTitle && 'sr-only' ]}>
          {siteTitle.replace("UI", "")}
        </a>
      </div>
      <div class="studiocms-ui-link">
        <a href={siteTitleHref} class="muted" class:list={[ config.logo?.replacesTitle && 'sr-only' ]}>
          UI
        </a>
      </div>
      <div class="docs-link">
        <a href="/docs/">{Astro.locals.t('site-title.labels.docs')}</a>
      </div>
    </div>
  <div>
</div>

<style>
	.site-title {
		justify-self: flex-start;
    display: flex;
    flex-direction: row;
    align-items: center;
		max-width: 100%;
		overflow: hidden;
		align-items: center;
    color: var(--sl-color-accent-high);
		gap: 0.5rem;
		font-weight: 600;
		text-decoration: none;
		white-space: nowrap;
    padding-inline-end: 1rem;
    padding-left: 0;
    margin-left: 0;
	}

  .site-title-quicklinks {
    margin-left: 0;
  }

  .main-links {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: .675rem;
  }

  .main-links > div {
    margin: 0;
    padding: 0;
    border: none !important;
  }

  .site-title-quicklinks > div {
    border: none !important;
    padding: 0;
    font-size: 1.5em;
    margin-left: 0;
  }

  :root[data-theme="light"] {
    .studiocms-link a {
      color: black;
    }
  }
    .studiocms-link a {
      color: white;
    }

  .docs-link {
    margin: 0;
  }

  .studiocms-link, .studiocms-ui-link, .docs-link {
    transition: all .15s ease;
  }

  .studiocms-link:hover, .studiocms-ui-link:hover, .docs-link:hover {
    transform: translateY(-.125rem);
  }

  .site-title > div {
    display: flex;
    align-items: center;
    color: hsl(var(--text-normal));
  }

  .site-title > div {
    padding-inline-end: 0;
  }

  .site-title a:hover {
    transform: translateY(-0.5rem);
  }

  a.muted {
    color: var(--sl-color-gray-2);
  }

  @media screen and (max-width: 520px) {
    .site-title div:first-of-type {
      border-right: 1px solid var(--sl-color-gray-5);
      padding-right: 1rem;
    }

    .site-title div:first-of-type span {
      display: none;
    }

    .site-title a:last-of-type {
      margin-left: .5rem;
    }
  }

	img {
		height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
		width: auto;
		max-width: 100%;
		object-fit: contain;
		object-position: 0 50%;
	}

  div:not(:last-child) {
    border-inline-end: 1px solid var(--sl-color-gray-5);
  }

  div {
    margin-left: 1rem;
    align-self: center;
    gap: 1rem;
    height: 100%;
    padding-inline-end: 1rem;
  }

  @media (min-width: 50rem) {
    div {
      align-items: center;
    }
  }

  a {
    color: var(--sl-color-text-accent);
    font-weight: 600;
    text-decoration: none;
  }

  .external-links > a {
    font-size: var(--sl-text-h6);
  }

  a:hover,
  a:focus {
    color: var(--sl-color-white);
  }

  [aria-current="page"],
  [aria-current="page"]:hover,
  [aria-current="page"]:focus {
    font-weight: 600;
  }

  @media (max-width: 78rem) {
    .external-links > a {
      font-size: var(--sl-text-sm);
    }
    .site-title > a{
      font-size: var(--sl-text-sm);
    }
  }

  @media screen and (max-width: 440px) {
    .external-links {
      margin-left: .5rem;
      padding-right: .5rem;
    }

    .site-title {
      padding-right: .5rem;
    }

    .site-title > a:first-of-type {
      padding-right: .5rem;
    }

    .site-title > a:last-of-type {
      margin-left: 0;
    }
  }
</style>
